<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="css/style.css">
  <script src="../script/script.js"></script>
</head>
<body>
<div class="container">

<div class="header col-md-offset-3 col-md-6">
    <div class="text-center">
        <h1>Want an answer?</h1>
    <p>Ask a question below, and the community will answer!</p>
    </div>
    <form role="form">
        <div class="form-group">
            <label for="sel1">Subject</label>
              <select class="form-control" id="sel1">
                <option>HTML</option>
                <option>CSS</option>
                <option>Javascript</option>
                <option>Node.js</option>
                <option>Express.js</option>
                <option>Handlebars.js</option>
                <option>Jade.js</option>
                <option>Angular.js</option>
                <option>Mongo DB</option>
                <option>MySQL</option>
                <option>Other</option>
              </select>
        </div>
        <div class="form-group">
            <label for="question_body">Question</label>
            <textarea type="text" class="form-control" id="question-body"></textarea>
        </div>
        <hr>
    </form>
    <a type="submit" class="btn btn-default" id="submit-new-question" onclick="submitQ()">Submit</a>
</div>
   
<div class="col-md-12 question-area">
{{#each question}}
<div class="col-md-4">
    <div class="question" id="{{this.qId}}">
        <h5 class="subject">{{this.subject}}</h5>
        <h5 class="userName">{{this.userName}}</h5>
        <h4>{{this.subject}}</h4>
        <hr>
        <h5>Comments:</h5>
        {{#each this.comment}}
        <div class="comment" id="this.commentId">
            <h5>{{this.userName}}</h5>
            <div class="like-group">
                <a onclick=""><span class="glyphicon glyphicon-heart"></span></a>
                <span class="badge">{{this.commentCount}}</span>
            </div>
            <p>{{this.content}}</p>
        </div>
        {{/each}}
        <div class="comment-form">
            <form action="form">
                <h5>Add Comment</h5>
                <textarea type="text" class="form-control"></textarea>
                <submit class="btn btn-default btn-sm" type="submit" id="submit-comment">Submit</submit>
            </form>
        </div>
    </div>
</div>
{{/each}}
  
</div>
    
    
</div>
    
</body>
</html>