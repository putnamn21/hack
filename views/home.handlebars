<div class="container">
    <div class="row text-center header">
        <h3>Welcome to this message page!</h3>
        <p>Front End constructed with: Bootsrap, Jquery, and Ajax<br>Server constructed with: Node.js, Express.js, and Handlebars.js</p>
    </div>
    <div class="row">
        <div class="form-group col-sm-5">
            <form id="tweetForm" action="/tweet" method="post">
                <label>Name</label>
                <input class="form-control input-wipe" type="text" name="name">
                <label>Tweet</label>
                <textarea class="form-control input-wipe" type="text" name="message"></textarea>
                <label for="select-list">Display Message To:</label>
                <select class="form-control input-wipe" name="viewers">
                    <option value="all">All</option>
                    <option value="friend">Friends</option>
                    <option value="family">Family</option>
                    <option value="coworker">Coworkers</option>
                </select>
                <hr/>
                <input class="btn btn-primary" type="submit">
            </form>
        </div>
        <div class="col-sm-6 col-sm-offset-1 tweet-section">
           <h3>Tweets</h3>
            <div class="btn-group col-xs-12">
              <button type="button" class="btn btn-default col-xs-3" onclick="displayAll('tweet')">All <div class="dot dot-all"></div></button>
              <button type="button" class="btn btn-default col-xs-3" onclick="displaySpecific('family', 'all')">Family <div class="dot dot-family"></div></button>
              <button type="button" class="btn btn-default col-xs-3" onclick="displaySpecific('friend', 'all')">Friends <div class="dot dot-friend"></div></button>
              <button type="button" class="btn btn-default col-xs-3" onclick="displaySpecific('coworker', 'all')">coworkers <div class="dot dot-coworker"></div></button>
            </div>
           <hr/>
           <div class="well well-lg" id="wellTweets">
                {{#each tweets}}
                    <div id="{{this.id}}">
                        <div class="{{this.viewers}} tweet">
                            <h4>{{this.name}}<div class="dot dot-{{this.viewers}}"></div></h4>
                            <hr/>
                            <p>{{this.message}}</p>
                            <a onclick="likeTweet({{this.id}})"><span class="glyphicon glyphicon-heart"></span></a>

                            <span class="badge" id="badge{{this.id}}">{{this.likedCount}}</span>

                            <a onclick="deleteTweet({{this.id}})"><span class="glyphicon glyphicon-trash"></span></a>
                            <span class="float-right">Delete</span>
                        </div>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>